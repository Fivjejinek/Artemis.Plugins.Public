<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Platforms>x64</Platforms>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <!-- All packages Artemis already references are compile-only dependencies -->
    <PackageReference Update="@(PackageReference)" IncludeAssets="compile;build" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ReactiveUI" Version="18.3.1" />
    <PackageReference Include="Serilog" Version="2.12.0" />
    <PackageReference Include="SkiaSharp" Version="2.88.3" />
    <PackageReference Include="RGB.NET.Core" Version="1.0.0-prerelease.46" />
  </ItemGroup>

  <!-- Replace DLL references with project references -->
  <ItemGroup>
    <ProjectReference Include="..\..\..\Artemis\src\Artemis.Core\Artemis.Core.csproj" />
    <ProjectReference Include="..\..\..\Artemis\src\Artemis.UI.Shared\Artemis.UI.Shared.csproj" />
    <ProjectReference Include="..\..\..\Artemis\src\Artemis.UI\Artemis.UI.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="plugin.json" CopyToOutputDirectory="PreserveNewest" />
    <PackageReference Include="ArtemisRGB.Plugins.BuildTask" Version="1.1.0" />
    <PackageReference Include="Avalonia" Version="0.10.18" />
    <PackageReference Include="EmbedIO" Version="3.5.2" />
  </ItemGroup>
</Project>
